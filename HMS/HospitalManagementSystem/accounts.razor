@page "/accounts"

@using Microsoft.AspNetCore.Components.WebView.Windows

<h3>Accounts</h3>

<BlazorWebView @ref="blazorWebView"
               HostPage="wwwroot/index.html"
               HostPageRelativePath="/wwwroot/index.html"
               RootComponents="typeof(App)" />

@code {
    private BlazorWebView blazorWebView;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await blazorWebView.EnsureCoreWebView2Async();
        }
    }
}
