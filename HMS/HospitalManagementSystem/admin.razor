@page "/admin"

<h3>Admin</h3>

<p>Total Doctors: @DoctorCount</p>
<p>Total Patients: @PatientCount</p>
<p>Total Staff: @StaffCount</p>
<p>Welcome, @FirstName @LastName!</p>

<button @onclick="NavigateToAdminProfile">Admin Profile</button>
<button @onclick="NavigateToAdminPatientList">Patient List</button>
<button @onclick="NavigateToRoom">Room Management</button>
<button @onclick="NavigateToStaffManagement">Staff Management</button>
<button @onclick="NavigateToAccounts">Accounts</button>
<button @onclick="NavigateToDoctorManagement">Doctor Management</button>
<button @onclick="NavigateToLogin">Logout</button>

@code {
    // Properties to store data
    private int DoctorCount { get; set; } = 0;
    private int PatientCount { get; set; } = 0;
    private int StaffCount { get; set; } = 0;
    private string FirstName { get; set; } = "";
    private string LastName { get; set; } = "";

    // Simulating navigation actions
    private void NavigateToAdminProfile() => NavigationManager.NavigateTo("/adminprofile");
    private void NavigateToAdminPatientList() => NavigationManager.NavigateTo("/adminpatientlist");
    private void NavigateToRoom() => NavigationManager.NavigateTo("/room");
    private void NavigateToStaffManagement() => NavigationManager.NavigateTo("/staffmanagement");
    private void NavigateToAccounts() => NavigationManager.NavigateTo("/accounts");
    private void NavigateToDoctorManagement() => NavigationManager.NavigateTo("/doctormanagement");
    private void NavigateToLogin() => NavigationManager.NavigateTo("/login");

    // Simulate loading data
    protected override void OnInitialized()
    {
        // Fetch data or set defaults
        DoctorCount = 10; // Replace with actual count
        PatientCount = 50; // Replace with actual count
        StaffCount = 20; // Replace with actual count
        FirstName = "John"; // Replace with actual name
        LastName = "Doe"; // Replace with actual name
    }
}