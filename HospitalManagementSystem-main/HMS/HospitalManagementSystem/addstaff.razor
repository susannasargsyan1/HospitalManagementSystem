@page "/addstaff"

<h3>Add Staff</h3>

@if (successMessage != null)
{
    <div class="alert alert-success" role="alert">
        @successMessage
    </div>
}

<div class="form-group">
    <label for="firstName">First Name:</label>
    <input type="text" class="form-control" id="firstName" @bind="staff.FirstName" />
</div>

<div class="form-group">
    <label for="lastName">Last Name:</label>
    <input type="text" class="form-control" id="lastName" @bind="staff.LastName" />
</div>

<!-- Add more form fields as needed -->

<button class="btn btn-primary" @onclick="AddStaff">Add Staff</button>

@code {
    private Staff staff = new Staff();
    private string successMessage;

    private void AddStaff()
    {
        // Call your method to add the staff here
        // You can use Dependency Injection to inject services if needed
        // For simplicity, I'm just setting a success message here
        successMessage = "Staff Added";
    }

    public class Staff
    {
        public string FirstName { get; set; }
        public string LastName { get; set; }
        // Add more properties as needed
    }
}